<Window x:Class="platon5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:platon5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Grid.Row="2" Content="Авторизироваться" Click="Button_click"/>
        <TextBox x:Name="LoginTbx" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="780" Height="124" Margin="0,49,0,0" Grid.RowSpan="2"/>
        <PasswordBox x:Name="PasswordTbx" HorizontalAlignment="Center" Margin="0,33,0,0" Grid.Row="1" VerticalAlignment="Top" Width="780" Height="101"/>
    </Grid>
</Window>
